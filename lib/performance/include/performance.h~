#ifndef __LIBPERFORMANCE_H
#define __LIBPERFORMANCE_H

#ifndef LIBPERFORMANCE_API
#define LIBPERFORMANCE_API __attribute__((visibility("default")))
#endif

#ifdef __cplusplus
extern "C" {
#endif
	int performance_set_device_min_frequency(int id, int frequency);
	int performance_get_device_min_frequency(int id);

	int performance_set_device_max_frequency(int id, int frequency);
	int performance_get_device_max_frequency(int id);

	int performance_set_device_frequency(int id, int frequency);
	int performance_get_device_frequency(int id);

	int performance_set_global_latency(int latency_us);
	int performance_get_global_latency(void);

	int performance_set_device_latency(int id, int latency_us);
	int performance_get_device_latency(int id);
	int performance_device_latency_supported(int id);

	int performance_get_device_id(const char *device);

	int performance_for_each_frequency(int id, int (*cb)(int frequency, void *data),
				       void *data);

	int performance_for_each_device(int (*cb)(const char *device,
					      void *data), void *data);

	int performance_init(void);
#ifdef __cplusplus
}
#endif

#endif /* __LIBPERFORMANCE_H */
