#ifndef LIBPERFORMANCE_API
#define LIBPERFORMANCE_API __attribute__((visibility("default")))
#endif

#ifdef __cplusplus
extern "C" {
#endif
	struct power_handler;

	struct power_handler *performance_create(void);

	void performance_destroy(struct power_handler *handler);
#ifdef __cplusplus
}
#endif

#endif /* __LIBPERFORMANCE_H */
